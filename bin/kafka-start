#!/bin/bash

BASE_DIR=$(dirname $0)/..
KAFKA_DIR=$GEM_HOME/bundler/gems/kafka-jars-*/
CONFIG_DIR=$BASE_DIR/spec/support/config

for file in $KAFKA_DIR/lib/*.jar;
do
  CLASSPATH=$CLASSPATH:$file
done

if [ -z "$KAFKA_JMX_OPTS" ]; then
  KAFKA_JMX_OPTS="-Dcom.sun.management.jmxremote -Dcom.sun.management.jmxremote.authenticate=false -Dcom.sun.management.jmxremote.ssl=false "
fi

if [ -z "$KAFKA_OPTS" ]; then
  KAFKA_OPTS="-Xmx512M -server -Dlog4j.configuration=file:$CONFIG_DIR/log4j.properties"
fi

if [ $JMX_PORT ]; then
  KAFKA_JMX_OPTS="$KAFKA_JMX_OPTS -Dcom.sun.management.jmxremote.port=$JMX_PORT "
fi

if [ -z "$JAVA_HOME" ]; then
  JAVA="java"
else
  JAVA="$JAVA_HOME/bin/java"
fi

JMX_PORT=9998
$JAVA $KAFKA_OPTS $KAFKA_JMX_OPTS -cp $CLASSPATH org.apache.zookeeper.server.quorum.QuorumPeerMain $CONFIG_DIR/zookeeper.properties > /dev/null 2>&1 &

sleep 2

JMX_PORT=9999
$JAVA $KAFKA_OPTS $KAFKA_JMX_OPTS -cp $CLASSPATH kafka.Kafka $CONFIG_DIR/server.properties > /dev/null 2>&1 &

sleep 2
